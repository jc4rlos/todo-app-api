{
    "ecmaFeatures": {
        "modules": true,
        "spread" : true,
        "restParams" : true
    },
    "env": {
      "commonjs": true,
      "es6": true,
      "node": true,
      "browser" : true
    },
    "extends": ["airbnb-base", "prettier"],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "ecmaVersion": 8,
        "requireConfigFile": false,
        "sourceType": "module",
        "allowImportExportEverywhere": true
    },
    "plugins": ["prettier"],
    "rules": {
      "prettier/prettier": "error",
      "no-unused-vars": "warn",
      "no-console": "off",
      "func-names": "off",
      "no-plusplus": "off",
      "no-process-exit": "off",
      "class-methods-use-this": "off",
      "no-undef" : 2,
      "import/prefer-default-export": "off"
    }
  }